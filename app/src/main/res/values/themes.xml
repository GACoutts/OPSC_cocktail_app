<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<style name="Base.Theme.MixMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme to match app design -->
        <item name="android:windowBackground">@color/dark_brown</item>
        <item name="colorSurface">@color/dark_brown</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/grayish_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MixMate" parent="Base.Theme.MixMate" />
    
    <!-- Theme without action bar for authentication screens -->
    <style name="Theme.MixMate.NoActionBar" parent="Theme.MixMate">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
    </style>
</resources>
