<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_brown"
    tools:context=".DiscoverPage">

    <include
        android:id="@+id/app_header"
        layout="@layout/include_app_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horizontally scrolling equal-width filter pills -->
    <HorizontalScrollView
        android:id="@+id/filters_scroller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/app_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/filters_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_side"
            android:paddingEnd="@dimen/margin_side"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Ingredient -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_ingredient"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="@dimen/filter_pill_width"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/brown"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingredient"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:dropDownWidth="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Alcohol Type -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_alcohol"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="@dimen/filter_pill_width"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/brown"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_alcohol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alcohol Type"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:dropDownWidth="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Rating -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_rating"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="@dimen/filter_pill_width"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/brown"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rating"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="none"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:dropDownWidth="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Footer navigation bar -->
    <include
        android:id="@+id/app_footer"
        layout="@layout/include_app_footer"
        android:layout_width="0dp"
        android:layout_height="@dimen/footer_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
