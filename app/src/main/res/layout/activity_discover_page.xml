<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_brown"
    tools:context=".DiscoverPage">

    <!-- Header -->
    <include
        android:id="@+id/app_header"
        layout="@layout/include_app_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Filter pills (safe defaults; no custom drawables) -->
    <HorizontalScrollView
        android:id="@+id/filters_scroller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/app_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/filters_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_side"
            android:paddingEnd="@dimen/margin_side"
            android:paddingBottom="8dp">

            <!-- Ingredient -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_ingredient"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/dark_brown_navbar"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintEnabled="true">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="@string/filter_ingredient_hint"
                    android:textColor="@color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Alcohol Type -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_alcohol"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/dark_brown_navbar"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintEnabled="true">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_alcohol"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="@string/filter_alcohol_hint"
                    android:textColor="@color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Rating -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_filter_rating"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/dark_brown_navbar"
                app:boxStrokeColor="@android:color/transparent"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusBottomEnd="24dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:hintEnabled="true">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/ac_filter_rating"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="@string/filter_rating_hint"
                    android:textColor="@color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Sort By title -->
    <TextView
        android:id="@+id/tv_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginTop="16dp"
        android:text="@string/sort_by_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters_scroller"/>

    <!-- Sort segmented control (no custom bg) -->
    <LinearLayout
        android:id="@+id/sort_segment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        android:layout_marginTop="8dp"
        android:background="@color/dark_brown_navbar"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sort_by">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/sort_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sort_popular"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/sort_popular"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:checked="true"
                app:backgroundTint="@color/dark_brown_navbar"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sort_newest"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/sort_newest"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_brown_navbar"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sort_top_rated"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/sort_top_rated"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_brown_navbar"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

    <!-- Suggested Cocktails grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_suggested"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        android:layout_marginTop="9dp"
        android:clipToPadding="false"
        android:padding="@dimen/grid_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_segment_container"
        app:layout_constraintBottom_toTopOf="@id/app_footer"/>

    <!-- Loading state -->
    <LinearLayout
        android:id="@+id/loading_container_discover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_segment_container"
        app:layout_constraintBottom_toTopOf="@id/app_footer">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Empty state -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/empty_container_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/dark_brown_navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_segment_container"
        app:layout_constraintBottom_toTopOf="@id/app_footer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:text="@string/no_cocktails_found"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Footer -->
    <include
        android:id="@+id/app_footer"
        layout="@layout/include_app_footer"
        android:layout_width="0dp"
        android:layout_height="@dimen/footer_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
