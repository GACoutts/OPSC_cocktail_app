<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_brown_navbar"
    tools:context=".ui.details.RecipeDetailsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/dark_brown_navbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_go_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:text="Recipe Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Reuse this as the favourite button the Activity expects -->
        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Favourite"
            app:tint="@color/white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/brown"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/cosmopolitan" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Recipe Name"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="My Custom Cocktail" />

            <!-- Optional Description (kept as-is; not used by Activity) -->
            <TextView
                android:id="@+id/tv_recipe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Recipe description..."
                android:textColor="@color/grayish_green"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                tools:text="A delightful custom cocktail perfect for evening gatherings." />

            <!-- Meta row kept (difficulty / time) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bar_chart"
                        app:tint="@color/light_brown"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="Medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_timer"
                        app:tint="@color/light_brown"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_prep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 mins"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="10 mins" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ingredients Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Ingredients"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Replace RV (not used by Activity/VM) with a TextView the Activity updates -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/brown"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Ingredients will be displayed here..."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    tools:text="• 50 ml Vodka\n• 25 ml Triple Sec\n• 25 ml Cranberry Juice" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Instructions"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/brown"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Instructions will be displayed here..."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    tools:text="1) Add all ingredients with ice.\n2) Shake 15s.\n3) Strain into a chilled glass." />
            </com.google.android.material.card.MaterialCardView>

            <!-- Optional details kept; hidden by default -->
            <LinearLayout
                android:id="@+id/layout_optional_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Glassware -->
                <LinearLayout
                    android:id="@+id/layout_glassware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_local_bar"
                        app:tint="@color/light_brown"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glassware: "
                        android:textColor="@color/grayish_green"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_glassware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martini Glass"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="Martini Glass" />
                </LinearLayout>

                <!-- Garnish -->
                <LinearLayout
                    android:id="@+id/layout_garnish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eco"
                        app:tint="@color/light_brown"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garnish: "
                        android:textColor="@color/grayish_green"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_garnish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lime wheel"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="Lime wheel" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
