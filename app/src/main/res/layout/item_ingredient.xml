<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeColor="@android:color/transparent"
    app:cardBackgroundColor="@color/brown">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Ingredient Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ingredient_name"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:hint="@string/ingredient_name"
            app:boxBackgroundColor="@color/dark_light_brown"
            app:boxStrokeColor="@color/light_brown"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/white"
            app:errorTextColor="@color/grayish_green"
            app:boxCollapsedPaddingTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ingredient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:text="Vodka" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ingredient_amount"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="@string/amount"
            app:boxBackgroundColor="@color/dark_light_brown"
            app:boxStrokeColor="@color/light_brown"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/white"
            app:errorTextColor="@color/grayish_green"
            app:boxCollapsedPaddingTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ingredient_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:text="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Unit -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ingredient_unit"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="@string/unit"
            app:boxBackgroundColor="@color/dark_light_brown"
            app:boxStrokeColor="@color/light_brown"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/white"
            app:errorTextColor="@color/grayish_green"
            app:endIconTint="@color/white"
            app:boxCollapsedPaddingTop="8dp">

            <AutoCompleteTextView
                android:id="@+id/actv_ingredient_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:text="oz" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btn_remove_ingredient"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/remove_ingredient"
            android:src="@drawable/ic_remove"
            app:tint="@color/light_brown" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>